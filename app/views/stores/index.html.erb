<p style="color: green">
  <%= notice %>
</p>

<h1 class="text-muted text-center">
  Stores
</h1>

<% @stores.each do |store| %>
  <div class="card shadow my-5 p-5">
    <%= render store %>
    <p><%= link_to "Show this store", store, class: 'btn btn-sm btn-outline-primary mt-3' %></p>
  </div>
<% end %>

<%= link_to "New book", new_store_path, class: 'btn btn-sm btn-outline-success' %>
